<div data-role="header">
  <h1>Colegios</h1>
  <% if can? :create, Colegio %>
    <%= link_to 'Registrar', new_colegio_path, "data-icon" => "plus", "class" => "ui-btn-right" %>
  <% end %>
</div>

<div data-role="content">
  <ul data-role="listview" data-filter="true">
    <% @colegios.each do |colegio| %>
    <li data-filtertext="<%= "#{colegio.nombre} #{colegio.direccion}" %>" >
      <% if can? :update, colegio %>
        <% link_opcion = edit_colegio_path(colegio) %>
      <% else %>
        <% link_opcion = colegio %>
      <% end %>
      <%= link_to link_opcion do %>
        <%= simple_format("#{colegio.nombre}") %>
      <% end %>
      
      <% if can? :destroy, colegio %>
        <%= link_to 'Eliminar', colegio, confirm: 'Â¿Seguro que desea eliminar el registro?', method: :delete, "data-icon" => "delete" %>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>
