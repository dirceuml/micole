<div data-role="header">
    <h1>Cambiar clave</h1>
    <%= link_to 'Regresar', menu_path, "data-icon" => "back", "class" => "ui-btn-left", "data-mini" => "true" %>
</div>


<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation" data-role="header" data-theme="e">
      <h2><%= pluralize(@usuario.errors.count, "error") %> impidieron que se grabe el registro:</h2>

      <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div data-role="fieldcontain">
  <div class="field" style="font-weight: bold">
    Usuario: <%= "#{@usuario.usuario} (#{@usuario.nombre})" %><br /><br />
  </div>
  <div class="field">
    Clave actual:<br />
    <%= f.password_field :clave_actual %>
  </div>
  <div class="field">
    Nueva clave:<br />
    <%= f.password_field :clave %>
  </div>
  <div class="field">
    Confirmaci√≥n de clave:<br />
    <%= f.password_field :clave_confirmation %>
  </div>
  
  <div class="actions">
    <%= f.submit "Grabar", "data-inline" => "true", "data-theme" => "a", "data-icon" => "check", "data-mini" => "true" %>
  </div>
</div>
<% end %>
