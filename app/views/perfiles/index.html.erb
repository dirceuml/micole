<div data-role="header">
  <h1>Perfiles</h1>
  <%= link_to 'Registrar', new_perfil_path, "data-icon" => "plus", "class" => "ui-btn-right" %>
</div>

<div data-role="content">
  <ul data-role="listview" data-filter="true">
    <% @perfiles.each do |perfil| %>
    <li data-filtertext="<%= "#{perfil.descripcion}" %>" >
      <%= link_to perfil_path(perfil) do %>
        <%= simple_format("#{perfil.descripcion}") %>
      <% end %>
      <%= link_to 'Eliminar', perfil, confirm: 'Â¿Seguro que desea eliminar el registro?', method: :delete, "data-icon" => "delete" %>
    </li>
    <% end  %>
  </ul>
</div>
