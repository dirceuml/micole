<div id='tipo_evento' data-role="header">
  <h1>Detalles</h1>
  <%= link_to 'Aceptar', tipos_eventos_path, "data-icon" => "check", "data-mini" => "true"  %>
</div>

<div data-role="content" style="clear: left">
  <b>Descripcion:</b> <%= @tipo_evento.descripcion %> <p>
  <b>Alcance:</b> 
      <%= "#{ListaValor.find_by_tabla_and_item(1, @tipo_evento.alcance).descripcion}" %>
      <p>
  <b>Notificacion inmediata:</b>
      <% if @tipo_evento.notificacion_inmediata == 1 %>
        Si
      <% else %>
        No
      <% end %>
      <p>
  <b>En cuaderno de control:</b>
      <% if @tipo_evento.cuaderno_control == 1 %>
        Si
      <% else %>
        No
      <% end %>
      <p>
  <b>Ingreso obligatorio de fecha programada:</b>
      <% if @tipo_evento.obligatorio_fecha == 1 %>
        Si
      <% else %>
        No
      <% end %>
      <p>
</div>

<div data-role="footer">
  <% if can? :update, @tipo_evento %>
    <%= link_to 'Editar', edit_tipo_evento_path(@tipo_evento), "class" => "ui-btn-left", "data-inline" => "true", "data-theme" => "a", "data-icon" => "gear", "data-mini" => "true" %>
  <% end %>
</div>
