<div id='anio_escolar' data-role="header">
  <h1>Detalles</h1>
  <%= link_to 'Aceptar', anios_alumnos_path, "data-icon" => "check", "data-mini" => "true"  %>
</div>

<div data-role="content" style="clear: left">
  <b>Alumno:</b> <%= Alumno.find(@anio_alumno.alumno_id).apellidos_nombres %> <p>
  <b>Seccion:</b> <%= Seccion.find(@anio_alumno.seccion_id).grado_seccion %> <p>
  <b>Activo:</b>
  <% if @anio_alumno.estado == 1 %>
    Si
  <% else %>
    No
  <% end %>
  <p>
</div>

<div data-role="footer">
  <% if can? :update, @anio_alumno %>
    <%= link_to 'Editar', edit_anio_alumno_path(@anio_alumno), "class" => "ui-btn-left", "data-inline" => "true", "data-theme" => "a", "data-icon" => "gear", "data-mini" => "true" %>
  <% end %>
</div>

