<div id='Actividad' data-role="header">
  <h1>Detalles</h1>
  <%= link_to 'Aceptar', actividades_path, "data-icon" => "check", "data-mini" => "true"  %>
</div>

<div data-role="content" style="clear: left">
    <b>Tipo Evento:</b> <%= "#{TipoEvento.find(@actividad.tipo_evento_id).descripcion}" %><p>
    <b>Tipo Actividad:</b> <%= "#{ListaValor.find_by_tabla_and_item(6, @actividad.tipo_actividad).descripcion}" %><p>
    <b>Nombre:</b> <%= @actividad.nombre %><p>
    <b>Detalle:</b> <%= @actividad.detalle %><p>
    <b>Fecha de inicio:</b> <%= @actividad.fecha_hora_inicio.strftime('%d/%m/%Y %H:%M') %><p>
    <b>Fecha de termino:</b> <%= @actividad.fecha_hora_fin.strftime('%d/%m/%Y %H:%M') %><p>
    <b>Requiere autorizaci√≥n:</b>
    <% if @actividad.requiere_autorizacion == 1 %>
     Si
    <% else %>
     No
    <% end %>
    <p>
</div>

<div data-role="footer">
  <%= link_to 'Editar', edit_actividad_path(@actividad), "class" => "ui-btn-left", "data-inline" => "true", "data-theme" => "a", "data-icon" => "gear", "data-mini" => "true" %>
</div>
