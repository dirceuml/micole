<div id='Grado' data-role="header">
  <h1>Detalles</h1>
  <%= link_to 'Aceptar', tipos_notas_path, "data-icon" => "check", "data-mini" => "true"  %>
</div>

<div data-role="content" style="clear: left">
  <b>Descripcion:</b> <%= @tipo_nota.descripcion %> <p>
  <b>Abreviatura:</b> <%= @tipo_nota.abreviatura %> <p>
</div>

<div data-role="footer">
  <% if can? :update, @tipo_nota %>
    <%= link_to 'Editar', edit_tipo_nota_path(@tipo_nota), "class" => "ui-btn-left", "data-inline" => "true", "data-theme" => "a", "data-icon" => "gear", "data-mini" => "true" %>
  <% end %>
</div>
