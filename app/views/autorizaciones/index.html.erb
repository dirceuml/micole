<div data-role="header">
  <h1>Autorizaciones</h1>
  <%= link_to 'Registrar', new_autorizacion_path, "data-icon" => "plus", "class" => "ui-btn-right" %>
</div>

<div data-role="content" class="ui-content" role="main">
  
  <div data-role="collapsible-set" data-theme="b" data-content-theme="d" data-inset="false">
    
    <div data-role="collapsible" data-collapsed="false">
      <h2>Pendientes</h2>
      <ul data-role="listview" data-filter="true">
        <% @autorizaciones.vigente.pendiente.each do |autorizacion| %>
          <li data-filtertext="<%= "#{autorizacion.actividad.fecha_hora_inicio.strftime('%d/%m/%Y')} - #{autorizacion.actividad.nombre} - #{autorizacion.alumno.apellidos_nombres}" %>" >
            <%= link_to edit_autorizacion_path(autorizacion) do %>
              <%= "#{autorizacion.actividad.fecha_hora_inicio.strftime('%d/%m/%Y')} - #{autorizacion.actividad.nombre} - #{autorizacion.alumno.apellidos_nombres}" %>
            <% end %>
            <!--%= link_to 'Eliminar', autorizacion, confirm: 'Â¿Seguro que desea eliminar el registro?', method: :delete, "data-icon" => "delete" %-->
          </li>
        <% end  %>
      </ul>
    </div>
    
    <div data-role="collapsible">
      <h2>Respondidas</h2>
      <ul data-role="listview" data-filter="true">
        <% @autorizaciones.vigente.respondida.each do |autorizacion| %>    
          <li data-filtertext="<%= "#{autorizacion.actividad.fecha_hora_inicio.strftime('%d/%m/%Y')} - #{autorizacion.actividad.nombre} - #{autorizacion.alumno.apellidos_nombres}" %>" >
            <%= link_to edit_autorizacion_path(autorizacion) do %>
              <%= "#{autorizacion.actividad.fecha_hora_inicio.strftime('%d/%m/%Y')} - #{autorizacion.actividad.nombre} - #{autorizacion.alumno.apellidos_nombres}" %> 
            <% end %>
          </li>
        <% end  %>
      </ul>
    </div>

    <div data-role="collapsible">
      <h2>Pasadas</h2>
      <ul data-role="listview" data-filter="true">
        <% @autorizaciones.pasado.each do |autorizacion| %>    
          <li data-filtertext="<%= "#{autorizacion.actividad.fecha_hora_inicio.strftime('%d/%m/%Y')} - #{autorizacion.actividad.nombre} - #{autorizacion.alumno.apellidos_nombres}" %>" >
            <%= link_to autorizacion do %>
              <%= "#{autorizacion.actividad.fecha_hora_inicio.strftime('%d/%m/%Y')} - #{autorizacion.actividad.nombre} - #{autorizacion.alumno.apellidos_nombres}" %> 
            <% end %>
          </li>
        <% end  %>
      </ul>
    </div>
    
  </div> <!-- collapsible set -->
  
</div>
