<%= form_for(@seccion) do |f| %>
  <% if @seccion.errors.any? %>
    <div id="error_explanation" data-role="header" data-theme="e">
      <h2><%= pluralize(@seccion.errors.count, "error") %> impidieron que se grabe el registro:</h2>

      <ul>
      <% @seccion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<div data-role="fieldcontain">
  <div class="field">
    Grado (*)<br />
    <%= collection_select(:seccion, :grado_id, Grado.where("anio_escolar_id= ?", anio_escolar.id).order("grado"), :id, :grado_nivel, {:prompt => ':: Seleccione ::'}, {"data-mini" => "true", :required => "required"}) %>
  </div>
  
  <div class="field">
    Seccion (*)<br />
    <%= f.text_field :seccion, :required => "required", :pattern => "^[A-Z]", :title => "Solo esta permitido una letra en mayuscula" %>
  </div>
  
  <div class="field">
    <%= f.hidden_field :usuario, :value => current_user.usuario %>
  </div>
    
  <div class="actions">
    <%= f.submit "Grabar", "data-inline" => "true", "data-theme" => "a", "data-icon" => "check", "data-mini" => "true" %>
  </div>
</div>
<% end %>
