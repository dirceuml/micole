<%= form_for(@curso) do |f| %>
  <% if @curso.errors.any? %>
    <div id="error_explanation" data-role="header" data-theme="e">
      <h2><%= pluralize(@curso.errors.count, "error") %> impidieron que se grabe el registro:</h2>

      <ul>
      <% @curso.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div data-role="fieldcontain">
  <div class="field">
    Descripci√≥n (*)<br />
    <%= f.text_field :descripcion %>
  </div>
  <div class="field">
    Abreviatura (*)<br />
    <%= f.text_field :abreviatura %>
  </div>
  <div class="field">
    <%= f.hidden_field :usuario, :value => current_user.usuario %>
