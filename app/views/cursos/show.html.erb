<div id='Grado' data-role="header">
  <h1>Detalles</h1>
  <%= link_to 'Aceptar', cursos_path, "data-icon" => "check", "data-mini" => "true"  %>
</div>

<div data-role="content" style="clear: left">
  <b>Descripcion:</b> <%= @curso.descripcion %> <p>
  <b>Abreviatura:</b> <%= @curso.abreviatura %> <p>
</div>

<div data-role="footer">
  <% if can? :update, @curso %>
    <%= link_to 'Editar', edit_curso_path(@curso), "class" => "ui-btn-left", "data-inline" => "true", "data-theme" => "a", "data-icon" => "gear", "data-mini" => "true" %>
  <% end %>
</div>
