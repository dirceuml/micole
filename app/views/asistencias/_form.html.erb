<%= form_for(@asistencia) do |f| %>
  <% if @asistencia.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@asistencia.errors.count, "error") %> impidieron que se grabe el registro:</h2>

      <ul>
      <% @asistencia.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div data-role="fieldcontain">
    <!--div class="field"-->
        <!--%= f.number_field :anio_alumno_id %-->
    <!--/div-->
    <!--div class="field" -->
        <!--%= f.number_field :persona_vinculada_id %-->
    <!--/div-->
    <div class="field">
        <%= f.hidden_field :fecha_hora, :value => Time.now %>
    </div>
    <div class="field">
        <%= f.hidden_field :usuario, :value => current_user.usuario %>
    </div>
    <div class="actions">
        <%= f.submit "Registrar", "data-inline" => "true", "data-theme" => "a", "data-icon" => "check", "data-mini" => "true" %>
    </div>
 </div>
<% end %>
