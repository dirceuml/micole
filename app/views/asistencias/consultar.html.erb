<div data-role="header">
  <h1>Consultar salida de alumnos con personas autorizada</h1>
</div>

<% if params[:seccion_id] == "0" %>
  <% seccion = "" %>
  <% fecha = "" %>
  <% titulo = "" %>
<% else %>
  <% seccion = params[:seccion_id] %>
  <% fecha = params[:fecha] %>
  <% titulo = "| Fecha: " + fecha + " | Sección: " + seccion + " |" %>
<% end %>

<div data-role="content">
  <%= form_tag(buscar_asistencia_path, {"onSubmit" => "return validarBusquedaXFecha();", "data-ajax" => "false", "name" => "buscar"}) do %>
    <div data-role="fieldcontain">
      Fecha: <%= text_field_tag(:fecha, fecha, "data-mini" => "true", "data-role" => "datebox", "type" => "date", "style" => "width:120px") %>
      Sección: <%= collection_select(:seccion, :id, Seccion.all, :id, :grado_seccion, {:selected => seccion}, {"data-mini" => "true", :name => "seccion_id"}) %>
      <%= submit_tag "Buscar", "data-inline" => "true", "data-theme" => "a", "data-icon" => "search", "data-mini" => "true" %>
    </div>
  <% end %>
  
  <ul data-role="listview" data-filter="true">
    <div data-role="content" style="color: #06c">
      <%= simple_format(titulo) %>
    </div>
    <% @asistencias.each do |asistencia| %>
    <li data-filtertext="<%= "#{asistencia.anio_alumno.alumno.apellidos_nombres}" %>" >
      <%= link_to "#" do %>
        <%= simple_format("#{asistencia.anio_alumno.alumno.apellidos_nombres}" ) %>
      <% end %>      
    </li>
    <% end %>
  </ul>
</div>
