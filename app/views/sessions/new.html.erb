<div data-role="header"><h1>Iniciar sesión</h1></div>


  <%= form_tag sessions_path :action => "create", :html => { :class => "ui-body ui-body-c" } do %>
  <div data-role="fieldcontain" align="center">
    <p>
      Usuario:<br />
      <%= text_field_tag :usuario, params[:usuario], "data-mini" => "true", "style" => "width:250px",  "autofocus" => "true" %>
    </p>
    <p>
      Clave:<br />
      <%= password_field_tag :clave, "",  "data-mini" => "true", "style" => "width:250px" %>
    </p>
    <p class="button"><%= submit_tag "Iniciar sesión", "data-inline" => "true", "data-theme" => "a", "data-icon" => "check", "data-mini" => "true" %></p>
    <p>
      <%= link_to "¿Olvidaste tu contraseña?", :controller => "usuarios", :action => "restaurar_clave", :res => "0" %>
    </p>
  </div>  
<% end %>