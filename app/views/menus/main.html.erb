<div data-role="header">
    <h1>Menú de opciones</h1>
</div>

<div data-role="content">
  <div class="content-primary">    
    <ul data-role="listview">  

      <li data-role="list-divider" data-icon="false" data-mini="true">
        Cuaderno de control
      </li>

      <% if [1,2,3,4,5].include? current_user.perfil_id %>
        <% if [1,5].include? current_user.perfil_id %>
          <li><a href="<%= tipos_eventos_path %>" data-ajax = "false">Configurar</a></li>
        <% end %>
        
        <% if [1,3].include? current_user.perfil_id %>
          <li><a href="<%= cuadernos_controles_path %>" data-ajax = "false">Registrar</a></li>
        <% end %>
        
        <% if [1,2,4].include? current_user.perfil_id %>
          <li>
            <a href="<%= cuaderno_controles_revisiones_path(:accion => :revisar, :usuario => current_user.usuario) %>" data-ajax = "false">
              Revisar
            </a>
          </li>
        <% end %>
        
        <% if [1,3].include? current_user.perfil_id %>
          <li><a href="<%= cuaderno_controles_revisiones_path(:accion => :verificar) %>" data-ajax = "false">Verificar</a></li>
        <% end %>
        <% if [1,2,3,4].include? current_user.perfil_id %>
          <li><a href="<%= cuaderno_controles_eventos_path %>" data-ajax = "false">Consultar eventos programados</a></li>
        <% end %>
      <% end %>


      <% if [1,2,3,4].include? current_user.perfil_id %>
        <li data-role="list-divider" data-icon="false" data-mini="true">
          Actividades del colegio
        </li>
        
        <% if [1,3].include? current_user.perfil_id %>
          <li><a href="<%= actividades_path %>" data-ajax = "false">Registrar</a></li>
        <% end %>
        
        <% if [1,2].include? current_user.perfil_id %>
          <li><a href="<%= autorizaciones_path(:accion => :autorizar, :usuario => current_user.usuario) %>" data-ajax = "false">Autorizar</a></li>          
        <% end %>

        <% if [1,3].include? current_user.perfil_id %>
          <li><a href="<%= autorizaciones_path(:accion => :consultar) %>" data-ajax = "false">Consultar autorizaciones</a></li>
        <% end %>

        <% if [1,2,3,4].include? current_user.perfil_id %>
          <li><a href="<%= calendario_actividades_path(Date.current.year, Date.current.month, Date.current.strftime('%d')) %>" data-ajax = "false">Calendario</a></li>
        <% end %>
      <% end %>

          
      <% if [1,3].include? current_user.perfil_id %>
        <li data-role="list-divider" data-icon="false" data-mini="true">
          Seguridad de alumnos
        </li>
        
        <% if [1,3].include? current_user.perfil_id %>
          <li><a href="<%= personas_vinculadas_path %>" data-ajax = "false">Personas vinculadas</a></li>
        <% end %>
        
        <% if [0].include? current_user.perfil_id #1,3 %>
          <li><a href="<%= vincularpersonas_path(:seccion_id => 0) %>" data-ajax = "false">Vincular personas</a></li>
        <% end %>

        <% if [1,3].include? current_user.perfil_id %>
          <li><a href="<%= salida_path %>" data-ajax = "false">Salida de alumnos</a></li>
        <% end %>

        <% if [0].include? current_user.perfil_id %>   <!--% Opcion deshabilitada %-->
          <li><a href="<%= new_asistencia_path %>" data-ajax = "false">Registrar asistencia de alumnos</a></li>
        <% end %>
        
        <% if [1,3].include? current_user.perfil_id %>
          <li><a href="<%= consulta_asistencia_path %>" data-ajax = "false">Consultar salida</a></li>
        <% end %>
        
        <% if [0].include? current_user.perfil_id %>  <!--% Opcion deshabilitada %-->
          <li><a href="<%= consulta_asistencia_alumno_path %>" data-ajax = "false">Consultar asistencias del alumno</a></li>
        <% end %>
      <% end %>
      
      <% if [1,3].include? current_user.perfil_id %>
        <li data-role="list-divider" data-icon="false" data-mini="true">
          Inasistencias y tardanzas
        </li>
        
        <% if [1,3].include? current_user.perfil_id %>
          <li><a href="<%= tardanzas_path %>" data-ajax = "false">Registrar tardanzas</a></li>
        <% end %>
        
        <% if [1,3].include? current_user.perfil_id %>
          <li><a href="<%= inasistencias_path %>" data-ajax = "false">Registrar inasistencias</a></li>
        <% end %>  
        
        <% if [1,3].include? current_user.perfil_id %>
          <li><a href="<%= consultar_inasistencias_tardanzas_path %>" data-ajax = "false">Consultar inasistencias y tardanzas</a></li>
        <% end %>
      <%end%>
      
      
      <% if [1,2,3,4,5].include? current_user.perfil_id %>
        <li data-role="list-divider" data-icon="false" data-mini="true">
          Notas
        </li>
        <% if [1,3,5].include? current_user.perfil_id %>
          <li><a href="<%= cargar_notas_path %>" data-ajax = "false">Cargar</a></li>
        <% end %>
        
        <% if [1,2,4].include? current_user.perfil_id %>
          <li><a href="<%= notas_path %>" data-ajax = "false">Consultar</a></li>
        <% end %>
      <% end %>
       
      <% if [1,2,3,4,5].include? current_user.perfil_id %> 
        <li data-role="list-divider" data-icon="false" data-mini="true">
          Mi cuenta
        </li>
        <li><a href="<%= cambiar_clave_path(:id => current_user.id) %>" data-ajax = "false">Cambiar clave</a></li>
      <% end %>
      
      <% if [1,5].include? current_user.perfil_id %> 
        <li data-role="list-divider" data-icon="false" data-mini="true">
          Administracion Colegio
        </li>
        <li><a href="<%= usuarios_path %>" data-ajax = "false">Usuarios</a></li>
        <li><a href="<%= crearusuarios_path %>" data-ajax = "false">Creacion masiva de usuarios</a></li>
        <li><a href="<%= anios_escolares_path %>" data-ajax = "false">Años escolares</a></li>
        <li><a href="<%= grados_path %>" data-ajax = "false">Grados y secciones</a></li>
        <li><a href="<%= alumnos_path %>" data-ajax = "false">Alumnos</a></li>
        <!--li><a href="<%#= anios_alumnos_path(:seccion_id => 0) %>" data-ajax = "false">Asignar alumnos a secciones</a></li-->
        <li><a href="<%= cargar_alumnos_path %>" data-ajax = "false">Cargar alumnos</a></li>
        <li><a href="<%= cargar_padres_path %>" data-ajax = "false">Cargar padres</a></li>
        <li><a href="<%= cargar_vinculos_path %>" data-ajax = "false">Cargar vínculos</a></li>
        <li><a href="<%= cargar_grados_secciones_path %>" data-ajax = "false">Cargar grados y secciones</a></li>
      <% end %>
      
      <% if current_user.perfil_id == 1 %> 
        <li data-role="list-divider" data-icon="false" data-mini="true">
          Administracion MiCole
        </li>
        <li><a href="<%= listas_valores_path %>" data-ajax = "false">Variables del sistema</a></li>
        <li><a href="<%= colegios_path %>" data-ajax = "false">Colegios</a></li>
        <li><a href="<%= cursos_path %>" data-ajax = "false">Cursos</a></li>
        <li><a href="<%= tipos_notas_path %>" data-ajax = "false">Tipos de nota</a></li>
        <li><a href="<%= permisos_path %>" data-ajax = "false">Permisos</a></li>
        <li><a href="<%= perfiles_path %>" data-ajax = "false">Perfiles</a></li>
      <% end %>
    </ul>
    
  </div><!--/content-primary -->	
</div>