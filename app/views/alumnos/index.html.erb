<div data-role="header">
  <h1>Alumnos</h1>
  <% if can? :create, Alumno %>
    <%= link_to 'Registrar', new_alumno_path, "data-icon" => "plus", "class" => "ui-btn-right" %>
  <% end %>
</div>
<% if !params[:seccion_id].nil? %>  
  <% seccion = params[:seccion_id] %>
<% end %>

<div data-role="content" class="content-primary">
  <%= form_tag(alumnos_path, {:method => :get, "data-ajax" => "false"}) do %>
    <div style="float: left">
      <%= simple_format("SecciÃ³n:") %>
    </div>
    <div style="width: 160px; clear: left; float: left">
      <%= collection_select(:seccion, :id, Seccion.por_anioescolar.order('grados.grado','seccion'), :id, :grado_seccion, {:selected => seccion}, {"data-mini" => "true", :name => "seccion_id"}) %>      
    </div>
    <div style="float: left">  
      <%= submit_tag "", "data-inline" => "true", "data-theme" => "a", "data-icon" => "search", "data-mini" => "true", "data-iconpos" => "notext", :name => nil %>
    </div>
  <% end %>

  <ul data-role="listview" data-filter="true">
    <% @alumnos.each do |alumno| %>
    <li data-filtertext="<%= alumno.apellidos_nombres %>" >
      <%= link_to alumno do %>
        <%= simple_format(alumno.apellidos_nombres) %>         
      <% end %>
    </li>
    <% end  %>
  </ul>
</div>